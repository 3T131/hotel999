        <!--<property name="defaultEncoding" value="UTF-8"/>-->
    <!--</bean>-->

    <!--扫包-->
    <context:component-scan base-package="com.accp.controller,com.accp.biz" />

    <!--拦截器-->
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/Commodity/**"/>
            <mvc:mapping path="/Main/**"/>
            <mvc:mapping path="/DateView/**"/>
            <mvc:mapping path="/Passenger/**"/>
            <mvc:mapping path="/Predetermine/**"/>
            <mvc:mapping path="/ReceiveTarget/**"/>
            <mvc:mapping path="/FinancialStatistics/**"/>
            <mvc:mapping path="/StayRegister/**"/>
            <mvc:mapping path="/RoomSet/**"/>
            <bean class="com.accp.interceptor.AdminInterceptor"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/DateView/**"/>
            <mvc:mapping path="/**/delete.do*"/>
            <mvc:mapping path="/ReceiveTarget/**"/>
            <bean class="com.accp.interceptor.SysInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!--出现运行时错误-->
    <bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="java.lang.RuntimeException">page_500</prop>
            </props>
        </property>
    </bean>

